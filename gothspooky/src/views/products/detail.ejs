<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <title>Producto <%= producto.id %></title>
  </head>
  <%- include('../partials/header') %>
  <body class="body">
    <main class="detail">
      <div class="container-title">
        <img src="gothspooky/public/images/design/banner.png" alt="" />
      </div>

      <div class="container-general">
        <div class="container-title-principal" id="title-principal">
          <div>
            <img src="gothspooky/public/images/design/barra.png" alt="" />
          </div>
          <div>
            <h2>Detalle de producto</h2>
          </div>
          <div>
            <img src="gothspooky/public/images/design/barra.png" alt="" />
          </div>
        </div>
        <div class="container-detail-description">
          <div class="container-name">
            <h2><%= producto.nombre %></h2>
          </div>
          <div class="container-info-product">
            <div class="container-detail">
              <div class="conteCarrouselController">
                <a href="#itemCarrousel-1"
                  ><img
                    src="gothspooky/public/images/products/producto1.jpg"
                    alt=""
                /></a>
                <a href="#itemCarrousel-2"
                  ><img
                    src="gothspooky/public/images/products/producto2.jpg"
                    alt=""
                /></a>
                <a href="#itemCarrousel-3"
                  ><img
                    src="gothspooky/public/images/products/producto3.jpg"
                    alt=""
                /></a>
                <a href="#itemCarrousel-4"
                  ><img
                    src="gothspooky/public/images/products/producto4.jpg"
                    alt=""
                /></a>
              </div>
              <div class="carousel-container">
                <div class="carousel">
                  <div class="carousel-item" id="itemCarrousel-1">
                    <img
                      src="/images/products/<%= producto.imagen[0].nombre  %>"
                      alt="<%= producto.nombre %> imagen 1"
                    />
                  </div>
                  <div class="carousel-item" id="itemCarrousel-2">
                    <img
                      src="gothspooky/public/images/products/producto2.jpg"
                      alt="Imagen 2"
                    />
                  </div>
                  <div class="carousel-item" id="itemCarrousel-3">
                    <img
                      src="gothspooky/public/images/products/producto3.jpg"
                      alt="Imagen 3"
                    />
                  </div>
                  <div class="carousel-item" id="itemCarrousel-4">
                    <img
                      src="gothspooky/public/images/products/producto4.jpg" 
                      alt="Imagen 4"
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="container-button">
              <button class="btn-add-to-cart">
                  AÃ±adir al Carrito
              </button>
            </div>
          </div>
          <div class="container-description">
            <div
              class="container-title-principal"
              id="title-principal-descripcion"
            >
              <div>
                <img src="gothspooky/public/images/design/barra.png" alt="" />
              </div>
              <div>
                <h2>descripcion</h2>
              </div>
              <div>
                <img src="gothspooky/public/images/design/barra.png" alt="" />
              </div>
            </div>

            <div class="text-description">
              <p>
                <%= producto.descripcion %>
              </p>
            </div>
          </div>
        </div>

        <section class="container-related-products">
          <div class="container-title-principal" id="title-principal-related">
            <div>
              <img src="gothspooky/public/images/design/barra.png" alt="" />
            </div>
            <div>
              <h2>Productos Relacionados</h2>
            </div>
            <div>
              <img src="gothspooky/public/images/design/barra.png" alt="" />
            </div>
          </div>
          <div class="card-list-products">
            <div class="card">
              <div class="card-img">
                <a href="#gothspooky/src/views/products/detail.ejs">
                  <img
                    src="gothspooky/public/images/products/producto1.jpg"
                    alt="producto-2"
                  />
                </a>
              </div>
              <div class="info-card">
                <div class="text-product">
                  <a href="#gothspooky/src/views/products/detail.ejs">
