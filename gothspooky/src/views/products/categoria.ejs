<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head')  %>
  <title>Categoria <%= categoria%> </title>
</head>
<body>
  <%- include('../partials/header')  %>

    <main class="categoria">
      <div class="contenedor-barra">
        <div class="linea"></div>
        <h1 class="titulo-principal titulo-categoria">Categoria: <%= categoria %></h1>
        <div class="linea"></div>
    </div>
        <section class="contenedor-productos ">
            <% productos.forEach(producto=>{%>
              <article class="producto-tarjeta columna">
                  <div class="">
                      <a class="producto-imagen" href="/products/<%= producto.id %>"><img src="/images/products/<%= producto.imagen[0].nombre %>"></a>
                  <div class="producto-detalles">
                      <p class="producto-precio">$<%= producto.precio %></p>
                      <h4 class="titulo"><%= producto.nombre %></h4>
                      <button class="producto-agregar" id="${producto.id}">Agregar</button>
                    </div>
                </div>

              </article>
            <% }) %> 
        </section>
    </main>
  
      
  <%- include('../partials/footer')  %>

</body>
<script src="../../../public/js/categorias.js"></script>
</html>